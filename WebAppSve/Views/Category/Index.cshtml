@model List<Business.Category>
@{
    ViewData["Title"] = "Lista de Categorias";
}
<a href="">Relatórios</a>
<h2 class="text-center text-success">Lista de Categorias</h2>
<div class="well well-sm">
    <a class="btn btn-primary" href="~/Category/Create">Novo</a>
    <!--<a class="btn btn-info" href="~/Client/SearchClients">Buscar</a>-->
</div>
<table class="table table-hover table-striped">
    <thead>

        <tr class="bg-primary">
            <th>Código</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Data de Cadastro</th>
            <th colspan="3">Operações</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var Category in Model)
        {
        <tr>
            <td>@Category.Id</td>
            <td>@Category.Name</td>
            <td>@Category.Description</td>
            <td>@Category.DateRegister</td>
            <td><a class="btn btn-success" href="~/Category/Details/@Category.Id"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td><a class="btn btn-info" href="~/Category/Edit/@Category.Id"><span class="fa fa-edit"></span></a></td>
            <td><a class="btn btn-danger" href="~/Category/Delete/@Category.Id"><span class="fa fa-book"></span></a></td>
        </tr>
        }
    </tbody>
</table>